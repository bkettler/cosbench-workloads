<?xml version="1.0" encoding="UTF-8"?>
<workload name="100gb" description="100gb S3 Benchmark">
  <storage type="s3" config="accesskey=ACCESSKEY;secretkey=SECRETKEY;endpoint=http://S3URL/;path_style_access=true" />
  <workflow>
    <!-- Init Stages -->
    <workstage name="init">
      <work type="init" workers="5" config="cprefix=100gb;containers=r(1,8)" />
    </workstage>

    <!-- 100% Write -->
    <workstage name="write">
      <work name="write" workers="64">
        <operation type="write" ratio="100" config="cprefix=100gb;containers=u(1,8);objects=s(1,80);sizes=c(100)GB" />
      </work>
    </workstage>

    <!-- 100% Read -->
    <workstage name="read">
      <work name="read" workers="64">
        <operation type="read" ratio="100" config="cprefix=100gb;containers=u(1,8);objects=s(1,80)" />
      </work>
    </workstage>

    <!-- 40/60 Read/Write -->
    <workstage name="4060rw">
      <work name="4060rw" workers="64">
        <operation type="read" ratio="40" config="cprefix=100gb;containers=u(1,8);objects=s(1,32)" />
        <operation type="write" ratio="60" config="cprefix=100gb;containers=u(1,8);objects=s(33,80);sizes=c(100)GB" />
      </work>
    </workstage>

    <!-- Cleanup Stages-->
    <workstage name="cleanup">
      <work name="cleanup" type="cleanup" workers="64" config="cprefix=100gb;containers=r(1,8);objects=r(1,80)" />
    </workstage>
    <workstage name="dispose">
      <work name="dispose" type="dispose" workers="5" config="cprefix=100gb;containers=r(1,8)" />
    </workstage>
  </workflow>
</workload>
