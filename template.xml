    </workstage>
    
    <!-- Clear Cache -->
    <!-- Bytes written should be a min of 2x memory -->
    <workstage name="clearcache">
      <work name="write" workers="300" totalOps="_CACHE_" division="object">
        <operation type="write" ratio="100" config="cprefix=clearcache;containers=u(1,1);objects=s(1,_CACHE_);sizes=c(100)MB" />
      </work>
    </workstage>

    <!-- 100% Read -->
