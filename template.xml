  <workflow>

    <!-- Init Stages -->
    <workstage name="init">
      <work type="init" workers="1" config="cprefix=_SIZE_kb-;containers=r(1,_BUCKETS_)" />
      <work type="init" workers="1" config="cprefix=clearcache;containers=r(1,1)" />
    </workstage>
    <workstage name="prepare">
      <work type="prepare" workers="_WORKERS_" config="cprefix=_SIZE_kb-;containers=r(1,_BUCKETS_);oprefix=r-_HASH_-;objects=r(1,_OBJECTS_);sizes=c(_SIZE_)KB;" />
    </workstage>

    <!-- 100% Write -->
    <workstage name="100w">
      <work name="100w" workers="_WORKERS_" runtime="_RUNTIME_" division="object">
        <operation type="write" ratio="100" config="cprefix=_SIZE_kb-;containers=u(1,_BUCKETS_);oprefix=100w-_HASH_-;objects=s(1,_OBJECTS_);sizes=c(_SIZE_)KB" />
